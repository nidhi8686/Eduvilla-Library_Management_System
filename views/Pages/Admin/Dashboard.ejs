<div class="container-fluid p-0 px-4">
    <div class="row mb-4">
        <div class="col-12 p-0 bg-white shadow-sm rounded-lg overflow-auto">
            <div class="d-flex">
                <h3 class="m-3">Books summary</h3>
                <form class="ml-auto mt-3">
                    <input class="form-control-sm mr-md-2 py-3 bg-light border-0 shadow-sm w-50" placeholder="Search">
                    <button class="btn btn-outline-dark btn-sm mb-1" type="submit">Search</button>
                </form>
            </div>
            <div class="text-center mx-3">
                <table class="table table-striped">
                    <tr>
                        <th class="p-2">#</th>
                        <th class="p-2">Image</th>
                        <th class="p-2">Book</th>
                        <th class="p-2">E-mail</th>
                        <th class="p-2">Fine</th>
                        <th class="p-2">Fine Status</th>
                    </tr>
                    <% for(var i=0;i<studentdata.length;i++){ %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><img src="<%= studentdata[i].imagepath %>" width="70px"></td>
                        <td style="vertical-align: middle;"><b><%= studentdata[i].title %> </b><br><%= studentdata[i].author %></td>
                        <td><%= studentdata[i].email %></td>
                        <td style="vertical-align: middle;"><%= studentdata[i].fine %>â‚¹</td>
                        <% if(studentdata[i].finestatus =="paid"){ %>
                            <td style="vertical-align: middle;"><p class="badge badge-success p-2">Paid</p></td>
                          <% }else{ %>
                                <% if(studentdata[i].fine > 0){ %>
                                  <td style="vertical-align: middle;"><p class="badge badge-danger p-2">Not paid</p></td>
                                <% }else{ %>
                                  <td style="vertical-align: middle;"><p class="badge badge-success p-2">No Fine</p></td>
                                <% } %>
                          <% } %>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
<%- include('../../partials/Student/realchat.ejs') -%>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    // Load google charts
    google.charts.load('current', {
        'packages': ['corechart']
    });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Task', 'Hours per Day'],
            ['Available', 7],
            ['Issued', 3],
        ]);

        // Optional; add a title and set the width and height of the chart
        var options = {
            'width': 300,
            'height': 260
        };
        // 
        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
    }
</script>
